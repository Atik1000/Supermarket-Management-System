# =============================================================================
# DJANGO CONFIGURATION
# =============================================================================
SECRET_KEY=django-insecure-change-this-in-production-random-key-12345
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Environment: development, staging, production
